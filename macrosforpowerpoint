Sub DeleteStrikethroughText()
    Dim osld As Slide
    Dim oshp As Shape
    Dim i As Long
    
    On Error Resume Next
    
    For Each osld In ActivePresentation.Slides
        For Each oshp In osld.Shapes
            ' Process Shapes
            If oshp.HasTextFrame Then
                If oshp.TextFrame.HasText Then
                    ProcessRange oshp.TextFrame.TextRange
                End If
            End If
            
            ' Process Tables
            If oshp.HasTable Then
                Dim r As Long, c As Long
                For r = 1 To oshp.Table.Rows.Count
                    For c = 1 To oshp.Table.Columns.Count
                        ProcessRange oshp.Table.Cell(r, c).Shape.TextFrame.TextRange
                    Next c
                Next r
            End If
        Next oshp
    Next osld
    
    On Error GoTo 0
    MsgBox "Cleanup finished. Check your slides!", vbInformation, "Status"
End Sub

Sub ProcessRange(tr As TextRange)
    Dim i As Long
    Dim fnt As Object
    
    If tr.Length > 0 Then
        For i = tr.Length To 1 Step -1
            Set fnt = tr.Characters(i).Font
            ' Check for ANY kind of strikethrough (Single or Double)
            ' In VBA, msoFalse is 0. Anything else means there's some strike formatting.
            If fnt.Strikethrough <> 0 Then 
                tr.Characters(i).Delete
            End If
        Next i
    End If
End Sub
